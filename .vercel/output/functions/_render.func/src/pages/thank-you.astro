---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import Card from '@/components/ui/Card.astro';
import { siteConfig } from '@/config/site';

const nextSteps = [
  {
    step: "1",
    title: "We Review Your Request",
    description: "We carefully review your garage door issue and service needs",
    timeframe: "Promptly"
  },
  {
    step: "2", 
    title: "Personal Contact",
    description: "We call you to discuss details and schedule your convenient appointment",
    timeframe: "Same day"
  },
  {
    step: "3",
    title: "Professional Service",
    description: "Licensed technician arrives with tools and parts for quality repairs",
    timeframe: "Scheduled"
  },
  {
    step: "4",
    title: "Satisfaction Guaranteed",
    description: "Quality work completed with 10-year warranty and cleanup included",
    timeframe: "Job completion"
  }
];

const urgentServices = [
  "Garage door won't open/close",
  "Broken springs (dangerous!)",
  "Door off track",
  "Opener not working",
  "Strange noises or grinding",
  "Safety sensor issues"
];
---

<BaseLayout 
  title="Thank You - Your Request Received | Ez2Fix Bergen County NJ"
  description="Thank you for choosing Ez2Fix! We'll contact you promptly with your personalized garage door service estimate. Professional service available."
>
  <Header />
  <main id="main-content">
    
    <!-- Thank You Hero -->
    <section class="py-20" style="background: linear-gradient(135deg, #1D1912 0%, #2A2420 100%);">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          
          <!-- Success Icon -->
          <div class="w-24 h-24 rounded-full mx-auto mb-8 flex items-center justify-center" style="background: linear-gradient(135deg, #D2A63C 0%, #EECD5C 100%);">
            <svg class="h-12 w-12" style="color: #1D1912;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          
          <h1 class="text-4xl md:text-6xl font-bold mb-6" style="color: #F3F3E6;">
            Thank You!
          </h1>
          <h2 class="text-2xl md:text-3xl font-semibold mb-8" style="color: #D2A63C;">
            Your Service Request Has Been Received
          </h2>
          <p class="text-xl leading-relaxed mb-12" style="color: #EECD5C;">
            We appreciate you choosing Ez2Fix for your garage door needs. We will contact you 
            promptly with your personalized estimate and to schedule your service.
          </p>
          
          <!-- Emergency Contact -->
          <div class="max-w-2xl mx-auto p-8 rounded-2xl border-2" style="background: rgba(210, 166, 60, 0.1); border-color: #D2A63C;">
            <h3 class="text-2xl font-bold mb-4" style="color: #F3F3E6;">
              Need Immediate Help?
            </h3>
            <p class="mb-6" style="color: #EECD5C;">
              If your garage door is completely broken or poses a safety hazard, don't wait - call us now!
            </p>
            <a 
              href={siteConfig.links.phone}
              class="inline-flex items-center justify-center px-8 py-4 text-xl font-bold rounded-lg transition-all duration-300 hover:shadow-lg transform hover:scale-105"
              style="background: linear-gradient(135deg, #D2A63C 0%, #EECD5C 100%); color: #1D1912;"
            >
              <svg class="mr-3 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Emergency: {siteConfig.business.phone}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- What Happens Next -->
    <section class="py-16" style="background-color: #F3F3E6;">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          
          <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: #1D1912;">
              What Happens <span style="color: #D2A63C;">Next?</span>
            </h2>
            <p class="text-xl max-w-3xl mx-auto leading-relaxed" style="color: #BB8525;">
              Here's exactly what you can expect from Ez2Fix over the next few hours and days.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {nextSteps.map((step, index) => (
              <Card class="text-center p-8 shadow-xl border-2 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1" style={`background-color: ${index % 2 === 0 ? '#1D1912' : 'white'}; border-color: ${index % 2 === 0 ? '#D2A63C' : '#BB8525'};`}>
                
                <!-- Step Number -->
                <div class="w-16 h-16 rounded-full mx-auto mb-6 flex items-center justify-center text-2xl font-bold" style={`background-color: ${index % 2 === 0 ? '#D2A63C' : '#1D1912'}; color: ${index % 2 === 0 ? '#1D1912' : '#F3F3E6'};`}>
                  {step.step}
                </div>
                
                <h3 class="text-xl font-bold mb-4" style={`color: ${index % 2 === 0 ? '#F3F3E6' : '#1D1912'};`}>
                  {step.title}
                </h3>
                <p class="mb-4 leading-relaxed" style={`color: ${index % 2 === 0 ? '#EECD5C' : '#BB8525'};`}>
                  {step.description}
                </p>
                <div class="text-sm font-semibold px-3 py-1 rounded-full" style={`background-color: ${index % 2 === 0 ? 'rgba(238, 205, 92, 0.2)' : 'rgba(210, 166, 60, 0.2)'}; color: ${index % 2 === 0 ? '#EECD5C' : '#D2A63C'};`}>
                  {step.timeframe}
                </div>
              </Card>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Urgent Issues -->
    <section class="py-16" style="background-color: #1D1912;">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            
            <!-- Left Column -->
            <div>
              <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: #F3F3E6;">
                Need <span style="color: #D2A63C;">Immediate Help?</span>
              </h2>
              <p class="text-xl leading-relaxed mb-8" style="color: #EECD5C;">
                Some garage door problems are urgent and can't wait. If you're experiencing any of these 
                issues, <strong>call us immediately</strong> for same-day emergency service.
              </p>
              
              <div class="mb-8">
                <h3 class="text-2xl font-bold mb-4" style="color: #D2A63C;">Emergency Situations:</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                  {urgentServices.map((service) => (
                    <div class="flex items-center space-x-3">
                      <svg class="h-5 w-5 flex-shrink-0" style="color: #D2A63C;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                      </svg>
                      <span style="color: #EECD5C;">{service}</span>
                    </div>
                  ))}
                </div>
              </div>
              
              <!-- Emergency CTA -->
              <a 
                href={siteConfig.links.phone}
                class="inline-flex items-center justify-center px-8 py-4 text-xl font-bold rounded-lg transition-all duration-300 hover:shadow-lg transform hover:scale-105"
                style="background: linear-gradient(135deg, #D2A63C 0%, #EECD5C 100%); color: #1D1912;"
              >
                <svg class="mr-3 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                Call Now: {siteConfig.business.phone}
              </a>
            </div>
            
            <!-- Right Column -->
            <Card class="p-8 shadow-2xl border-2" style="background-color: #F3F3E6; border-color: #D2A63C;">
              <div class="text-center mb-6">
                <h3 class="text-3xl font-bold mb-4" style="color: #1D1912;">
                  Why Ez2Fix?
                </h3>
                <p class="text-lg" style="color: #BB8525;">
                  You made the right choice for your garage door service!
                </p>
              </div>
              
              <div class="space-y-6">
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: #D2A63C;">
                    <svg class="h-5 w-5" style="color: #F3F3E6;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-bold mb-1" style="color: #1D1912;">Professional Service</h4>
                    <p class="text-sm" style="color: #BB8525;">Professional repairs completed promptly</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: #EECD5C;">
                    <svg class="h-5 w-5" style="color: #1D1912;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-bold mb-1" style="color: #1D1912;">Licensed & Insured</h4>
                    <p class="text-sm" style="color: #BB8525;">Professional service you can trust completely</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: #BB8525;">
                    <svg class="h-5 w-5" style="color: #F3F3E6;" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 .587l3.668 7.431 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-bold mb-1" style="color: #1D1912;">5.0 Star Rating</h4>
                    <p class="text-sm" style="color: #BB8525;">Based on 30+ verified customer reviews</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: #D2A63C;">
                    <svg class="h-5 w-5" style="color: #F3F3E6;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-bold mb-1" style="color: #1D1912;">10-Year Warranty</h4>
                    <p class="text-sm" style="color: #BB8525;">Comprehensive warranty on all parts and labor</p>
                  </div>
                </div>
              </div>
              
              <!-- Customer Reviews Link -->
              <div class="mt-8 pt-6 border-t text-center" style="border-color: rgba(187, 133, 37, 0.2);">
                <a 
                  href="/reviews"
                  class="inline-flex items-center text-sm font-semibold hover:underline" 
                  style="color: #D2A63C;"
                >
                  Read What Our Customers Say
                  <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </section>

    <!-- Navigation Links -->
    <section class="py-12" style="background-color: #F3F3E6;">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center">
            <h3 class="text-2xl font-bold mb-8" style="color: #1D1912;">
              While You Wait, Learn More About Ez2Fix
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <a 
                href="/about"
                class="group p-6 rounded-lg border-2 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
                style="background-color: white; border-color: #BB8525;"
              >
                <h4 class="text-lg font-bold mb-2 group-hover:text-opacity-80" style="color: #1D1912;">About Ez2Fix</h4>
                <p class="text-sm" style="color: #BB8525;">Learn about our family business and commitment to Bergen County</p>
              </a>
              
              <a 
                href="/services"
                class="group p-6 rounded-lg border-2 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
                style="background-color: white; border-color: #D2A63C;"
              >
                <h4 class="text-lg font-bold mb-2 group-hover:text-opacity-80" style="color: #1D1912;">Our Services</h4>
                <p class="text-sm" style="color: #BB8525;">Discover all the ways we can help with your garage door</p>
              </a>
              
              <a 
                href="/reviews"
                class="group p-6 rounded-lg border-2 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
                style="background-color: white; border-color: #EECD5C;"
              >
                <h4 class="text-lg font-bold mb-2 group-hover:text-opacity-80" style="color: #1D1912;">Customer Reviews</h4>
                <p class="text-sm" style="color: #BB8525;">Read testimonials from satisfied Bergen County customers</p>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>
  <Footer />
</BaseLayout>