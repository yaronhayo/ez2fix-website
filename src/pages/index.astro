---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import HomeHero from '@/components/sections/HomeHero.astro';
import HomeMain from '@/components/sections/HomeMain.astro';
import FAQComponent from '@/components/ui/FAQComponent.astro';
import ReviewsCarousel from '@/components/ui/ReviewsCarousel.astro';
import BookingForm from '@/components/ui/BookingForm.astro';
import Card from '@/components/ui/Card.astro';
import { siteConfig } from '@/config/site';
---

<BaseLayout
  title="Garage Door Repair Bergen County NJ | Ez2Fix | 24/7 Emergency Service"
  description="Expert garage door repair & installation in Bergen & Hudson Counties, NJ. Licensed contractor with 10-year warranty, 24/7 emergency service. Call (201) 554-6769 for free estimate!"
  keywords="garage door repair bergen county nj, garage door installation nj, emergency garage door repair, garage door spring repair nj, garage door opener installation bergen county, garage door repair elmwood park, garage door repair fair lawn, garage door repair clifton nj, garage door service northern nj, licensed garage door contractor bergen county"
>
  <Fragment slot="head">
    <!-- Preload hero video for faster loading -->
    <link rel="preload" as="video" href="https://qjvikxuhqs1py0go.public.blob.vercel-storage.com/ez2fix-hero-background.mp4" type="video/mp4">
  </Fragment>
  
  
  <Header />
  <main id="main-content">
    <HomeHero />
    
    <div class="py-8 hidden lg:block"></div>
    
    <!-- Mobile Form Section (only visible on mobile) -->
    <section class="lg:hidden py-4 sm:py-6 md:py-8" style="background-color: #F3F3E6;">
      <div class="container mx-auto px-3 sm:px-4">
        <div class="max-w-sm sm:max-w-lg mx-auto">
          <Card class="p-3 sm:p-4 shadow-2xl border-2" style="background-color: white; border-color: #D2A63C;">
            <BookingForm 
              variant="inline"
              title="Get Your Free Estimate"
              subtitle="Tell us about your garage door issue and we'll provide an honest, detailed estimate."
              buttonText="Get My Free Estimate"
            />
            
            <!-- Form Benefits -->
            <div class="mt-3 sm:mt-4 pt-3 sm:pt-4 border-t" style="border-color: rgba(187, 133, 37, 0.2);">
              <div class="grid grid-cols-2 gap-2 sm:gap-4 text-center">
                <div>
                  <div class="text-xs sm:text-sm font-semibold" style="color: #1D1912;">Professional Service</div>
                  <div class="text-xs" style="color: #BB8525;">Licensed & Insured</div>
                </div>
                <div>
                  <div class="text-xs sm:text-sm font-semibold" style="color: #1D1912;">Free Estimates</div>
                  <div class="text-xs" style="color: #BB8525;">No Hidden Fees</div>
                </div>
              </div>
            </div>
          </Card>
        </div>
      </div>
    </section>
    
    <div class="py-8"></div>
    
    <HomeMain />
    
    <div class="py-8"></div>
    
    <FAQComponent 
      faqs={[
        {
          question: "How do you price garage door repair services in Elmwood Park, NJ?",
          answer: "Garage door repair costs vary depending on the specific issue and required parts. We provide free estimates with upfront pricing - no hidden fees or surprises! Contact us for a personalized quote based on your specific needs."
        },
        {
          question: "What is your service availability for garage door repairs?",
          answer: "Ez2Fix provides prompt garage door repair service throughout Elmwood Park and surrounding areas. We offer reliable service and are available for service calls. Contact us to discuss your specific scheduling needs."
        },
        {
          question: "What garage door brands do you service in Elmwood Park?",
          answer: "We service ALL major garage door brands including LiftMaster, Chamberlain, Genie, Craftsman, Wayne Dalton, Clopay, Amarr, and Chi. Our licensed technicians carry parts for most common brands on their trucks for efficient repairs."
        },
        {
          question: "How long do garage door springs last and when should I replace them?",
          answer: "Garage door springs typically last 7-10 years or 10,000 cycles. Warning signs include: garage door won't open, closes too fast, makes loud noises, or appears crooked. NEVER attempt DIY spring repair - it's extremely dangerous! Call Ez2Fix for safe, professional spring replacement with a 10-year warranty."
        },
        {
          question: "Are you licensed and insured for garage door work in NJ?",
          answer: "Absolutely! Ez2Fix is fully licensed (#13VH13553300) and insured for all garage door work in New Jersey. We're a family-owned business serving Elmwood Park since 2014 with an A+ BBB rating and 5-star Google reviews."
        },
        {
          question: "Do you offer senior discounts on garage door services?",
          answer: "Yes! Ez2Fix proudly offers a senior discount (65+) on garage door repairs and installations. We believe in taking care of our community's seniors with honest, affordable service. Just mention this discount when you call!"
        }
      ]}
      title="Got Questions About <span style='color: #D2A63C;'>Garage Door Repair</span> in Elmwood Park?"
      subtitle="<strong>Honest answers from Ez2Fix</strong> - your local garage door experts! From pricing to warranties, we've got you covered with transparent, helpful information."
    />
    
    <div class="py-8"></div>
    
    <section class="py-16" style="background-color: #F3F3E6;">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12 animate-on-scroll">
            <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: #1D1912;">
              What Your <span style="color: #D2A63C;">Neighbors</span> Are Saying
            </h2>
            <p class="text-xl max-w-3xl mx-auto leading-relaxed mb-8" style="color: #BB8525;">
              Real stories from real families across Northern NJ who called us when their garage doors broke. 
              <span style="color: #D2A63C; font-weight: 700;">Tomorrow, this could be your relief story too</span>.
            </p>
          </div>
          
          <div class="animate-on-scroll">
            <ReviewsCarousel pageType="homepage" />
          </div>
          
          <div class="text-center mt-8 animate-on-scroll">
            <a 
              href="/reviews"
              class="inline-flex items-center justify-center px-8 py-3 text-lg font-semibold border-2 rounded-lg transition-all duration-300 hover:shadow-lg"
              style="color: #D2A63C; border-color: #D2A63C; background-color: transparent;"
            >
              Read All Reviews
            </a>
          </div>
        </div>
      </div>
    </section>

    <div class="py-8"></div>

    <!-- Final CTA Section -->
    <section class="py-16" style="background: linear-gradient(135deg, #1D1912 0%, #2A2420 100%);">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center animate-on-scroll">
          <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: #F3F3E6;">
            Get Your Garage Door <span style="color: #EECD5C;">Fixed Today</span>
          </h2>
          <p class="text-xl md:text-2xl leading-relaxed mb-8" style="color: #F3F3E6;">
            You've worried enough about this. One call and you can stop stressing about your garage door forever. 
            <span style="color: #EECD5C; font-weight: 700;">Your peace of mind is just a phone call away</span>.
          </p>
          
          <!-- Stats Row -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <div class="text-center p-6 rounded-lg" style="background: rgba(238, 205, 92, 0.1);">
              <div class="text-4xl font-bold mb-2" style="color: #D2A63C;">15+</div>
              <div class="text-lg" style="color: #EECD5C;">Years Helping Neighbors</div>
            </div>
            <div class="text-center p-6 rounded-lg" style="background: rgba(238, 205, 92, 0.1);">
              <div class="text-4xl font-bold mb-2" style="color: #D2A63C;">10,000+</div>
              <div class="text-lg" style="color: #EECD5C;">Families Helped</div>
            </div>
            <div class="text-center p-6 rounded-lg" style="background: rgba(238, 205, 92, 0.1);">
              <div class="text-4xl font-bold mb-2" style="color: #D2A63C;">24/7</div>
              <div class="text-lg" style="color: #EECD5C;">When You Need Us</div>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-2xl mx-auto">
            <a 
              href={siteConfig.links.phone}
              class="inline-flex items-center justify-center px-8 py-4 text-xl font-bold rounded-lg transition-all duration-300 hover:shadow-lg transform hover:scale-105"
              style="background: linear-gradient(135deg, #D2A63C 0%, #EECD5C 100%); color: #1D1912;"
            >
              <svg class="mr-3 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Call {siteConfig.business.phone}
            </a>
            <a 
              href="/booking"
              class="inline-flex items-center justify-center px-8 py-4 text-xl font-bold border-2 rounded-lg transition-all duration-300 hover:shadow-lg transform hover:scale-105"
              style="color: #EECD5C; border-color: #EECD5C; background-color: transparent;"
            >
              Book Service 100% Online
              <svg class="ml-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>

          <!-- Trust Indicators -->
          <div class="mt-12 flex justify-center items-center space-x-8 flex-wrap gap-4">
            <div class="flex items-center space-x-2">
              <svg class="h-6 w-6" style="color: #D2A63C;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <span class="font-semibold" style="color: #F3F3E6;">You Can Trust Us</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="h-6 w-6" style="color: #D2A63C;" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 .587l3.668 7.431 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
              </svg>
              <span class="font-semibold" style="color: #F3F3E6;">Neighbors Love Us</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="h-6 w-6" style="color: #D2A63C;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
              <span class="font-semibold" style="color: #F3F3E6;">We Stand Behind Our Work</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
  
  <style>
    /* Global animation classes for homepage */
    .animate-on-scroll {
      opacity: 0;
      transform: translateY(30px);
      transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      will-change: transform, opacity;
    }

    .animate-on-scroll.animate-in {
      opacity: 1;
      transform: translateY(0);
      will-change: auto;
    }

    /* Staggered animations for children */
    .stagger-children > .animate-on-scroll:nth-child(1) { transition-delay: 0.1s; }
    .stagger-children > .animate-on-scroll:nth-child(2) { transition-delay: 0.2s; }
    .stagger-children > .animate-on-scroll:nth-child(3) { transition-delay: 0.3s; }
    .stagger-children > .animate-on-scroll:nth-child(4) { transition-delay: 0.4s; }
    .stagger-children > .animate-on-scroll:nth-child(5) { transition-delay: 0.5s; }
    .stagger-children > .animate-on-scroll:nth-child(6) { transition-delay: 0.6s; }

    /* Enhanced hover effects for homepage elements */
    @media (hover: hover) and (pointer: fine) {
      .animate-on-scroll:hover {
        transform: translateY(-2px) !important;
        will-change: transform;
      }
    }

    /* Smooth transitions for all interactive elements */
    a, button {
      transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.2s ease;
    }

    /* Optimized button interactions */
    @media (hover: hover) and (pointer: fine) {
      button:hover, a:hover {
        transform: translateY(-1px);
      }
    }

    /* Remove hover effects on touch devices */
    @media (hover: none) {
      .animate-on-scroll:hover,
      button:hover,
      a:hover {
        transform: none !important;
        animation: none !important;
      }
    }
  </style>
</BaseLayout>
