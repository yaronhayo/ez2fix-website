---
import { siteConfig } from '@/config/site';

const reviews = [
  {
    name: "Sarah Johnson",
    location: "Paramus, NJ",
    rating: 5,
    text: "Excellent service! My garage door spring broke on a Saturday morning and Ez2Fix had a technician at my house within 2 hours. Professional, friendly, and fairly priced. Highly recommend!",
    service: "Spring Replacement"
  },
  {
    name: "Mike Rodriguez", 
    location: "Hackensack, NJ",
    rating: 5,
    text: "The best garage door company in Bergen County! They installed a new door for us and the quality is outstanding. The team was punctual, clean, and very knowledgeable.",
    service: "Door Installation"
  },
  {
    name: "Jennifer Chen",
    location: "Englewood, NJ", 
    rating: 5,
    text: "Called Ez2Fix for a garage door repair late at night. They came out promptly and fixed our broken opener. Great communication and very reasonable pricing for professional service.",
    service: "Opener Repair"
  },
  {
    name: "Robert Thompson",
    location: "Ridgewood, NJ",
    rating: 5,
    text: "Outstanding service from start to finish. They diagnosed the problem quickly, explained everything clearly, and completed the repair professionally. Will definitely use them again!",
    service: "Cable Repair"
  }
];
---

<section class="py-16" style="background-color: #F3F3E6;">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: #1D1912;">
        What Our <span style="color: #D2A63C;">Customers</span> Say
      </h2>
      <p class="text-xl max-w-3xl mx-auto leading-relaxed" style="color: #BB8525;">
        Don't just take our word for it. See why Bergen County residents trust Ez2Fix 
        for all their garage door needs.
      </p>

      <!-- Overall Rating -->
      <div class="flex items-center justify-center mt-8 space-x-4">
        <div class="flex items-center space-x-1">
          {[1, 2, 3, 4, 5].map(() => (
            <svg class="h-8 w-8" style="color: #D2A63C;" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 .587l3.668 7.431 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
            </svg>
          ))}
        </div>
        <div>
          <div class="text-3xl font-bold" style="color: #D2A63C;">5.0</div>
          <div class="text-sm" style="color: #BB8525;">Based on 150+ reviews</div>
        </div>
      </div>
    </div>

    <!-- Reviews Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      {reviews.map((review, index) => (
        <div class="p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border-2" style="background-color: white; border-color: #EECD5C;">
          <!-- Header -->
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-1">
              {[1, 2, 3, 4, 5].map((star) => (
                <svg class="h-5 w-5" style="color: #D2A63C;" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 .587l3.668 7.431 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                </svg>
              ))}
            </div>
            <span class="px-3 py-1 text-xs font-semibold rounded-full" style="background-color: #EECD5C; color: #1D1912;">
              {review.service}
            </span>
          </div>

          <!-- Review Text -->
          <blockquote class="text-lg leading-relaxed mb-6" style="color: #1D1912;">
            "{review.text}"
          </blockquote>

          <!-- Customer Info -->
          <div class="flex items-center space-x-4">
            <!-- Avatar -->
            <div class="w-12 h-12 rounded-full flex items-center justify-center font-bold text-lg" style="background-color: #D2A63C; color: #F3F3E6;">
              {review.name.split(' ').map(n => n[0]).join('')}
            </div>
            
            <div>
              <div class="font-semibold" style="color: #1D1912;">{review.name}</div>
              <div class="text-sm" style="color: #BB8525;">{review.location}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Review Platforms -->
    <div class="text-center mb-12">
      <p class="text-lg mb-6" style="color: #BB8525;">
        Find us on major review platforms:
      </p>
      <div class="flex justify-center items-center space-x-8 flex-wrap gap-4">
        <!-- Google Reviews -->
        <div class="flex items-center space-x-2 px-6 py-3 rounded-lg" style="background-color: white; border: 2px solid #BB8525;">
          <svg class="h-6 w-6" viewBox="0 0 24 24">
            <path fill="#4285f4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34a853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#fbbc05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#ea4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <div>
            <div class="font-semibold text-sm" style="color: #1D1912;">Google</div>
            <div class="text-xs" style="color: #BB8525;">5.0★ Rating</div>
          </div>
        </div>

        <!-- Yelp -->
        <div class="flex items-center space-x-2 px-6 py-3 rounded-lg" style="background-color: white; border: 2px solid #BB8525;">
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="#ff1744">
            <path d="M12.17,1.988c-.37-.13-2.17,1.025-2.29,1.31-.23.53,4.88,8.892,5.65,8.892.24,0,.23-.37.23-.37s.28-2.57-.41-3.85c-.63-1.17-2.78-5.58-3.18-5.977M8.65,4.998c-.34-.25-2.51.52-2.73.87-.41.67,6.873,7.65,7.673,7.65.27,0,.29-.41.29-.41s-.317-2.64-1.227-3.69c-.83-.96-3.69-4.17-3.996-4.42m-1.77,9.01c-.42.24.45,2.46.78,2.63.62.31,9.49-3.94,9.49-4.76,0-.27-.41-.29-.41-.29s-2.64.32-3.69-.59c-.96-.83-5.75-2.93-6.17-2.99m5.89,1.56c-.26-.38-2.57.23-2.77.58-.37.66,4.12,8.96,4.9,8.96.25,0,.27-.37.27-.37s.49-2.54-.28-3.82c-.7-1.17-1.74-5.05-2.12-5.35m7.53-1.54c.13-.37-1.03-2.17-1.31-2.29-.53-.23-8.89,4.88-8.89,5.65,0,.24.37.23.37.23s2.57.28,3.85-.41c1.17-.63,5.58-2.78,5.98-3.18"/>
          </svg>
          <div>
            <div class="font-semibold text-sm" style="color: #1D1912;">Yelp</div>
            <div class="text-xs" style="color: #BB8525;">5.0★ Rating</div>
          </div>
        </div>

        <!-- Better Business Bureau -->
        <div class="flex items-center space-x-2 px-6 py-3 rounded-lg" style="background-color: white; border: 2px solid #BB8525;">
          <div class="w-6 h-6 rounded-full flex items-center justify-center font-bold text-xs" style="background-color: #1D1912; color: #F3F3E6;">
            BBB
          </div>
          <div>
            <div class="font-semibold text-sm" style="color: #1D1912;">BBB</div>
            <div class="text-xs" style="color: #BB8525;">A+ Rating</div>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <div class="max-w-2xl mx-auto p-8 rounded-2xl" style="background-color: #D2A63C;">
        <h3 class="text-3xl font-bold mb-4" style="color: #F3F3E6;">
          Join Our Happy Customers!
        </h3>
        <p class="text-lg mb-6" style="color: #F3F3E6;">
          Experience the Ez2Fix difference. Professional service, fair pricing, and satisfaction guaranteed.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={siteConfig.links.phone}
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold rounded-xl transition-all duration-300 hover:shadow-lg"
            style="background-color: #F3F3E6; color: #1D1912;"
          >
            <svg class="mr-3 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call Now: {siteConfig.business.phone}
          </a>
          <a 
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold border-2 rounded-xl transition-all duration-300 hover:shadow-lg"
            style="color: #F3F3E6; border-color: #F3F3E6; background-color: transparent;"
          >
            Get Free Estimate
          </a>
        </div>
      </div>
    </div>
  </div>
</section>